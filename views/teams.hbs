<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Teams</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="exportUsers()">Export(not working yet)</button>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-5 table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>Team ID</th>
            <th>Team Name</th>
            <th>View Members</th>
          </tr>
        </thead>
        <tbody>
          {{#each teams}}
          <tr>
            <td>{{cpId}}</td>
            <td>{{teamName}}</td>
            <td>
              <a href="#" onclick="filterMembers('{{_id}}', '{{teamName}}')">
                <p data-feather="arrow-right"></p>
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-7">
      <br>
      <div class="card">
        <div id="memberView" class="card-body">
          View Members by clicking on the
          <p data-feather="arrow-right"></p> of one of the teams
        </div>
      </div>
    </div>
  </div>
</main>